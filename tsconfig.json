{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "jsx": "react-jsx",

    /* Modules */
    "module": "esnext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
